<div class='col-xs-12 col-md-6 product-image'>
  <!-- 商品图片 -->
    <div class="row">
      <% if @product_images.present? %>
      <!-- 第一张图为 medium 尺寸大图 -->
      <div class="col-md-12">
        <%= image_tag(@product_images.first.image.medium.url, class: 'main-image') %>
      </div>
        <% @product_images.each_with_index do |p| %>
          <!-- 显示所有商品图片 other 尺寸小图 -->
          <div class="col-md-2 col-sm-4 col-xs-6 image-box">
            <%= image_tag(p.image.other.url, class: 'list-image') %>
          </div>
        <% end %>
      <% else %>
        <%= image_tag('http://placehold.it/300x300&text=No Pic', class: 'thumbnail') %>
      <% end %>
    </div>
  </div>

<div class='col-xs-12 col-md-6'>
  <h1> <%= @product.title %> </h1>

  <!-- 所属大类 -->
  <h3><%= t('f-category-group') %></h3>
  <p><%= @product.category.category_group.name %></p>

  <!-- 所属细分品类 -->
  <h3><%= t('f-product-category') %></h3>
  <p><%= @product.category.name %></p>

  <!-- 所属品牌 -->
  <h3><%= t('f-product-brand') %></h3>
  <p><%= @product.brand.name %></p>

  <!-- 商品价格 -->
  <h3><%= t('f-product-price') %></h3>
  <p><%= @product.price %></p>

  <!-- 商品数量 -->
  <h3><%= t('f-product-quantity') %></h3>
  <p><%= @product.quantity %></p>
</div>
